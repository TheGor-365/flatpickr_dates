<div class="col-6 p-5 shadow rounded">
  <%= form_with(model: event, data: {
    controller: "flatpickr"
  }) do |form| %>

    <% if event.errors.any? %>
      <p><%= pluralize(event.errors.count, "error") %> prohibited this event from being saved</p>
      <% event.errors.each do |error| %>
        <p><%= error.full_message %></p>
      <% end %>
    <% end %>

    <div>
      <%= form.label :title, class: "form-label" %>
      <%= form.text_field :title, class: "form-control" %>
    </div>

    <div>
      <%= form.label :start_time, class: "form-label" %><br>
      <%= form.datetime_field :start_time, class: "start_time" %>
    </div>

    <div>
      <%= form.label :end_time, class: "form-label" %><br>
      <%= form.datetime_field :end_time, class: "end_time" %>
    </div>

    <div class="mt-3">
      <%= form.submit class: "btn btn-sm btn-success" %>
    </div>
  <% end %>
</div>
